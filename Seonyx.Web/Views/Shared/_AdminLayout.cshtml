<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Seonyx Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="~/Content/css/site.css" rel="stylesheet" />
    <link href="~/Content/css/admin.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body class="admin-body">
    <header class="admin-header">
        <div class="container">
            <a href="/admin" class="admin-brand">
                <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" width="32" height="32">
                    <path d="M 50 50 L 0 0 L 50 0 Z" fill="#7C3AED" />
                    <path d="M 50 50 L 100 0 L 100 50 Z" fill="#10B981" />
                    <path d="M 50 50 L 100 100 L 50 100 Z" fill="#7C3AED" />
                    <path d="M 50 50 L 0 100 L 0 50 Z" fill="#10B981" />
                </svg>
                <span>Seonyx Admin</span>
            </a>
            <nav class="admin-nav">
                <a href="/admin">Dashboard</a>
                <a href="/admin/pages">Pages</a>
                <a href="/admin/authors">Authors</a>
                <a href="/admin/books">Books</a>
                <a href="/admin/contentblocks">Content Blocks</a>
                <a href="/admin/submissions">Submissions</a>
                <a href="/admin/settings">Settings</a>
                <a href="/" target="_blank">View Site</a>
                <a href="/admin/logout" class="btn-logout">Logout</a>
            </nav>
        </div>
    </header>

    <main class="admin-content">
        <div class="container">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">@TempData["Message"]</div>
            }
            @RenderBody()
        </div>
    </main>

    <script src="~/Scripts/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
