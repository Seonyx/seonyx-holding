@model Seonyx.Web.Models.Author
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = Model.AuthorId > 0 ? "Edit Author" : "Add Author";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("SaveAuthor", "Admin", FormMethod.Post, new { @class = "admin-form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.AuthorId)

    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.PenName)
            @Html.TextBoxFor(m => m.PenName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PenName)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Genre)
            @Html.TextBoxFor(m => m.Genre, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Biography)
        @Html.TextAreaFor(m => m.Biography, new { @class = "form-control", rows = 6 })
    </div>

    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.PhotoUrl)
            @Html.TextBoxFor(m => m.PhotoUrl, new { @class = "form-control", placeholder = "/Content/images/uploads/author.jpg" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Website)
            @Html.TextBoxFor(m => m.Website, new { @class = "form-control", placeholder = "https://" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.SortOrder)
            @Html.TextBoxFor(m => m.SortOrder, new { @class = "form-control", type = "number" })
        </div>
        <div class="form-group form-checkboxes">
            <label class="checkbox-label">
                @Html.CheckBoxFor(m => m.IsActive)
                Active
            </label>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save Author</button>
        <a href="/admin/authors" class="btn btn-secondary">Cancel</a>
    </div>
}
