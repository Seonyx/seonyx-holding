@model Seonyx.Web.Models.ContentBlock
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Content Block";
}

<h1>Edit: @Model.Title</h1>

@using (Html.BeginForm("SaveContentBlock", "Admin", FormMethod.Post, new { @class = "admin-form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BlockId)

    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.BlockKey)
            @Html.TextBoxFor(m => m.BlockKey, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Content)
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control content-editor", rows = 15 })
    </div>

    <div class="form-group form-checkboxes">
        <label class="checkbox-label">
            @Html.CheckBoxFor(m => m.IsActive)
            Active
        </label>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/admin/contentblocks" class="btn btn-secondary">Cancel</a>
    </div>
}
