@model List<Seonyx.Web.Models.Book>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Manage Books";
    var authors = ViewBag.Authors as List<Seonyx.Web.Models.Author>;
}

<div class="admin-page-header">
    <h1>Books</h1>
    <a href="/admin/createbook" class="btn btn-primary">Add Book</a>
</div>

<table class="admin-table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Published</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@(book.Author != null ? book.Author.PenName : "-")</td>
                <td>@book.Genre</td>
                <td>
                    @if (book.IsPublished)
                    {
                        <span class="badge badge-success">Published</span>
                    }
                    else
                    {
                        <span class="badge badge-draft">Draft</span>
                    }
                </td>
                <td>
                    <a href="/admin/editbook/@book.BookId" class="btn btn-sm">Edit</a>
                    @using (Html.BeginForm("DeleteBook", "Admin", new { id = book.BookId }, FormMethod.Post, new { @class = "inline-form", onsubmit = "return confirm('Delete this book?');" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
