@model Seonyx.Web.Models.Book
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = Model.BookId > 0 ? "Edit Book" : "Add Book";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("SaveBook", "Admin", FormMethod.Post, new { @class = "admin-form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BookId)

    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Title)
        </div>
        <div class="form-group">
            <label>Author</label>
            @Html.DropDownListFor(m => m.AuthorId, ViewBag.Authors as SelectList, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Synopsis)
        @Html.TextAreaFor(m => m.Synopsis, new { @class = "form-control", rows = 6 })
    </div>

    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.Genre)
            @Html.TextBoxFor(m => m.Genre, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ISBN)
            @Html.TextBoxFor(m => m.ISBN, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.CoverImageUrl)
            @Html.TextBoxFor(m => m.CoverImageUrl, new { @class = "form-control", placeholder = "/Content/images/uploads/cover.jpg" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PublicationDate)
            @Html.TextBoxFor(m => m.PublicationDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.AmazonUrl)
            @Html.TextBoxFor(m => m.AmazonUrl, new { @class = "form-control", placeholder = "https://amazon.com/..." })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.KDPUrl)
            @Html.TextBoxFor(m => m.KDPUrl, new { @class = "form-control", placeholder = "https://..." })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.SortOrder)
            @Html.TextBoxFor(m => m.SortOrder, new { @class = "form-control", type = "number" })
        </div>
        <div class="form-group form-checkboxes">
            <label class="checkbox-label">
                @Html.CheckBoxFor(m => m.IsPublished)
                Published
            </label>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save Book</button>
        <a href="/admin/books" class="btn btn-secondary">Cancel</a>
    </div>
}
