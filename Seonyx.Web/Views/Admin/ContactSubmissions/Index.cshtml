@model List<Seonyx.Web.Models.ContactSubmission>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Contact Submissions";
}

<h1>Contact Submissions</h1>

<table class="admin-table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sub in Model)
        {
            <tr class="@(!sub.IsRead ? "unread" : "") @(sub.IsSpam ? "spam" : "")">
                <td>@sub.SubmittedDate.ToString("dd MMM yyyy HH:mm")</td>
                <td>@sub.Name</td>
                <td>@sub.Email</td>
                <td>@(sub.Subject ?? "-")</td>
                <td>
                    @if (sub.IsSpam)
                    {
                        <span class="badge badge-danger">Spam</span>
                    }
                    else if (!sub.IsRead)
                    {
                        <span class="badge badge-info">New</span>
                    }
                    else
                    {
                        <span class="badge">Read</span>
                    }
                </td>
                <td>
                    <a href="/admin/viewsubmission/@sub.SubmissionId" class="btn btn-sm">View</a>
                    @using (Html.BeginForm("MarkAsSpam", "Admin", new { id = sub.SubmissionId }, FormMethod.Post, new { @class = "inline-form" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-warning" title="Mark as spam">Spam</button>
                    }
                    @using (Html.BeginForm("DeleteSubmission", "Admin", new { id = sub.SubmissionId }, FormMethod.Post, new { @class = "inline-form", onsubmit = "return confirm('Delete this submission?');" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
